---
// 1. ZONA DE JAVASCRIPT: Definimos las props que recibirá el layout
// Recibirá un "title" para cambiar el título de cada pestaña
const { title = "Sitio Web Local" } = Astro.props; 
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} | Negocio Local</title>
    
    <style>
        /* Estilos base */
        body { margin: 0; font-family: system-ui, sans-serif; }
    </style>
</head>
<body>
    <header class="bg-gray-900 text-white p-4">
        <nav class="max-w-4xl mx-auto flex justify-between">
            <span class="font-bold text-xl">Tu Marca WaaS</span>
            </nav>
    </header>

    <main class="max-w-4xl mx-auto p-4 min-h-[60vh]">
        <slot /> 
    </main>

    <footer class="bg-gray-200 text-center py-6 mt-10">
        <p>&copy; {new Date().getFullYear()} {title}. Todos los derechos reservados.</p>
        </footer>
</body>
</html>